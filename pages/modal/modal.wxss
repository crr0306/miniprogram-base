/* pages/modal/modal.wxss */
page {
  height: 100%;
  background: rgb(248, 248, 248);
}
.modals{
  position: fixed;
  z-index: 999;
  top:0; left: 0; right:0; bottom: 0;
}
.bottom-dialog-body{
  position: absolute;
  z-index: 10001;
  left: 0; right:0; top: 0;
  height: 440rpx;
  background: red;
}
/*配合 left: 0; right:0; top: 0;决定弹框位置*/
.bottom-pos{
  -webkit-transform: translateY(-100%);
  transform: translateY(-100%);

}
.upload-main-bg-view{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.upload-type-view{
  display: flex;
  height: 220rpx;
  width: 100%;
  margin-top: 80rpx;
  /*居中*/
 justify-content: space-around;
}
.upload-cancel-view {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
}
.upload-type-item-view{
  display: flex;
  /*俩个图标大小*/
  width: 128rpx;
  height: 208rpx;
  
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
}

.upload-cover-view{
  height: 128rpx;
  width: 128rpx;
}
.upload-description-view{
  margin-top: 20rpx;
  font-size: 24rpx;
  color: rgb(102, 102, 102);
}
